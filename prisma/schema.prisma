generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  inbox
  todo
  doing
  done
}

enum TaskEnergy {
  low
  med
  high
}

enum TaskMode {
  calls
  admin
  out
  deep
}

enum FollowUpStatus {
  queued
  sent
  snoozed
  skipped
}

enum TemplateChannel {
  sms
  email
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  tasks     Task[]
  checkIns  CheckIn[]
  appStates AppState[]
}

model Task {
  id              String      @id @default(cuid())
  title           String
  status          TaskStatus  @default(inbox)
  dueAt           DateTime?
  estimateMinutes Int?
  energy          TaskEnergy  @default(med)
  mode            TaskMode    @default(admin)
  tags            String      @default("")
  pinnedToday     Boolean     @default(false)
  parentId        String?
  parent          Task?       @relation("TaskToTask", fields: [parentId], references: [id])
  children        Task[]      @relation("TaskToTask")
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
}

model CheckIn {
  id         String   @id @default(cuid())
  eaten      Boolean  @default(false)
  water      Boolean  @default(false)
  moved      Boolean  @default(false)
  brainState String
  capacity   String
  mood       String
  createdAt  DateTime @default(now())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
}

model CalendarEvent {
  id       String   @id @default(cuid())
  eventId  String   @unique
  startAt  DateTime
  endAt    DateTime
  title    String
  location String?
  createdAt DateTime @default(now())
}

model FollowUp {
  id          String         @id @default(cuid())
  eventId     String?
  status      FollowUpStatus @default(queued)
  scheduledAt DateTime
  templateId  String?
  createdAt   DateTime       @default(now())
  template    Template?      @relation(fields: [templateId], references: [id])
}

model Template {
  id        String          @id @default(cuid())
  name      String
  channel   TemplateChannel @default(sms)
  body      String
  followUps FollowUp[]
}

model AppState {
  id                  String   @id @default(cuid())
  discoveryStart      DateTime @default(now())
  uniNextStep         String   @default("Set a tiny next step")
  weatherLocation     String   @default("Sydney, NSW")
  appointmentKeywords String   @default("massage,session")
  quietHoursStart     String   @default("21:30")
  quietHoursEnd       String   @default("07:00")
  userId              String?
  user                User?    @relation(fields: [userId], references: [id])
}
